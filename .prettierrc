{
	"printWidth": 80,
	"useTabs": true,
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "none",
	"jsxSingleQuote": true,
	"bracketSameLine": false,
	"spaceBeforeFunctionParen": true,
	"proseWrap": "preserve",
	"plugins": [
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],
	"importOrder": [
		"^react",
		"^next",
		"<THIRD_PARTY_MODULES>",
		"^@/",
		"^[../]",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
